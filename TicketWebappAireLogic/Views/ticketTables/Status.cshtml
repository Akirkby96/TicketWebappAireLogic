@model IEnumerable<TicketWebappAireLogic.Models.ticketTable>

@{
    ViewBag.Title = "Status";
}

<h2>Status</h2>

<p>
    @Html.ActionLink("Ticket Index", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ticketTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticketDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticketStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticketCreationTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userTable.userName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ticketTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticketDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticketStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticketCreationTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userTable.userName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ticketID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ticketID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ticketID })
        </td>
    </tr>
}

</table>
